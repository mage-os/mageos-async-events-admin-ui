<?xml version="1.0"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">async_events_events_grid.async_events_events_grid_data_source</item>
            <item name="deps" xsi:type="string">async_events_events_grid.async_events_events_grid_data_source</item>
        </item>
    </argument>
    <settings>
        <buttons>
            <button name="add">
                <url path="*/*/new"/>
                <class>primary</class>
                <label translate="true">Add New</label>
            </button>
        </buttons>
        <spinner>async_events_events_grid_columns</spinner>
        <deps>
            <dep>async_events_events_grid.async_events_events_grid_data_source</dep>
        </deps>
    </settings>
    <dataSource name="async_events_events_grid_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">subscription_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>MageOS_AsyncEvents::async_events_create</aclResource>
        <dataProvider class="MageOS\AsyncEventsAdminUi\Ui\DataProvider\AsyncEventDataProvider"
                      name="async_events_events_grid_data_source">
            <settings>
                <requestFieldName>subscription_id</requestFieldName>
                <primaryFieldName>subscription_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <columns name="async_events_events_grid_columns">
        <column name="subscription_id">
            <settings>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>desc</sorting>
            </settings>
        </column>
        <column name="event_name">
            <settings>
                <filter>text</filter>
                <label translate="true">Event Name</label>
            </settings>
        </column>
        <column name="recipient_url">
            <settings>
                <filter>text</filter>
                <label translate="true">Recipient Url</label>
            </settings>
        </column>
        <column name="verification_token">
            <settings>
                <filter>text</filter>
                <label translate="true">Verification Token</label>
            </settings>
        </column>
        <column name="status">
            <settings>
                <filter>select</filter>
                <label translate="true">Status</label>
            </settings>
        </column>
        <column name="metadata">
            <settings>
                <filter>text</filter>
                <label translate="true">Metadata</label>
            </settings>
        </column>
        <column name="store_id">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Store Id</label>
            </settings>
        </column>
        <actionsColumn name="actions"
                       class="MageOS\AsyncEventsAdminUi\Ui\Component\Listing\Column\AsyncEventBlockActions">
            <settings>
                <indexField>subscription_id</indexField>
            </settings>
        </actionsColumn>
    </columns>
</listing>
